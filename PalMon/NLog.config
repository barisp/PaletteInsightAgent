<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets async="true">
    <target name="nlog_txt_file" xsi:type="File" fileName="Logs\PalMon.nlog.txt"
            layout="${date} [${threadid}] ${pad:padding=8:inner=${level:uppercase=true} ${logger}} - ${message}" />
    <target xsi:type="ColoredConsole"
          name="colored_console"
          encoding="utf-8"
          layout="${date} [${threadid}] ${pad:padding=8:inner=${level:uppercase=true} ${logger}} - ${message}"
          header="Header.Layout"
          footer="Footer.Layout"
          useDefaultRowHighlightingRules="true"
          errorStream="false">
  </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" maxlevel="Error" writeTo="nlog_txt_file,colored_console" />
  </rules>
</nlog>
